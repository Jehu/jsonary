{
	"title": "Blog",
	"type": "object",
	"properties": {
		"posts": {
			"type": "array",
			"items": {"$ref": "post.json#/definitions/reference"}
		},
		"page": {
			"type": "integer"
		},
		"next": {
			"type": "string",
			"format": "uri"
		},
		"prev": {
			"type": "string",
			"format": "uri"
		}
	},
	"links": [
		{
			"rel": "prev",
			"href": "{+prev}"
		},
		{
			"rel": "next",
			"href": "{+next}"
		}
	]
}