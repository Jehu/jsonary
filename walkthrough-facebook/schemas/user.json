{
	"title": "User",
	"type": "object",
	"properties": {
		"id": {"title":"User ID", "type": "string"},
		"name": {"title": "Full name", "type": "string"},
		"first_name": {"title": "First name", "type": "string"},
		"last_name": {"title": "Last name", "type": "string"},
		"username": {"title": "Username", "type": "string"},
		"gender": {"title": "Gender", "type": "string", "enum": ["male", "female"]},
		"locale": {"title": "User's locale", "type": "string"},
		"languages": {"title": "User's languages"},
		"link": {"title": "Profile on Facebook.com", "type": "string"},
		"updated_time": {"title": "Last updated", "type": "string", "format": "date-time"},
		"verified": {"title": "Verified", "type": "boolean"},
		"bio": {"title": "About", "type": "string"},
		"birthday": {"title": "Birthday", "type": "string", "format": "date"},
		"education": {"$ref": "#/definitions/education"},
		"email": {"title": "Email", "type": "string"},
		"hometown": {"title": "Hometown", "allOf": [{"$ref": "object.json#/definitions/reference"}]},
		"interested_in": {"title": "Interested in", "description": "List of genders"},
		"location": {"title": "Location", "allOf": [{"$ref": "object.json#/definitions/reference"}]},
		"political": {"title": "Political views", "type": "string"},
		"quotes": {"title": "Favourite quotes", "type": "string"},
		"relationship_status": {"$ref": "#/definitions/relationship_status"},
		"religion": {"title": "Religious views", "type": "string"},
		"significant_other": {"$ref": "user.json#/definitions/reference"},
		"website": {"title": "Website", "type": "string", "format": "uri"},
		"work": {"$ref": "#/definitions/work"}
	},
	"required": ["id", "name", "first_name", "last_name", "gender", "locale"],
	"links": [
		{
			"rel": "alternate",
			"href": "{+link}",
			"mediaType": "text/html"
		},
		{
			"rel": "albums",
			"href": "/{id}/albums",
			"targetSchema": {"$ref": "array.php?type=album"}
		},
		{
			"rel": "feed",
			"href": "/{id}/feed",
			"targetSchema": {"$ref": "array.php?type=post"}
		},
		{
			"rel": "friends",
			"href": "/{id}/friends",
			"targetSchema": {"$ref": "array-ref.php?type=user"}
		},
		{
			"rel": "groups",
			"href": "/{id}/groups",
			"targetSchema": {"$ref": "array-ref.php?type=group"}
		},
		{
			"rel": "likes",
			"href": "/{id}/likes",
			"targetSchema": {"$ref": "array-ref.php?type=object"}
		},
		{
			"rel": "photos",
			"href": "/{id}/photos",
			"targetSchema": {"$ref": "array.php?type=photo"}
		},
		{
			"rel": "picture",
			"href": "/{id}/picture",
			"mediaType": "image/jpeg"
		},
		{
			"rel": "posts",
			"href": "/{id}/posts",
			"targetSchema": {"$ref": "array.php?type=post"}
		},
		{
			"rel": "statuses",
			"href": "/{id}/statuses",
			"targetSchema": {"$ref": "array.php?type=post"}
		},
		{
			"rel": "tagged",
			"href": "/{id}/tagged",
			"targetSchema": {"$ref": "array.php?type=post"}
		},
		{
			"rel": "create_post",
			"href": "/{id}/feed",
			"method": "POST",
			"encType": "application/x-www-form-urlencoded",
			"schema": {
				"title": "New post",
				"type": "object",
				"properties": {
					"message": {"title": "Message", "type": "string"},
					"link": {"title": "Link URL", "type": "string", "format": "uri"}
				},
				"dependencies": {
					"link": {
						"properties": {
							"name": {"title": "Link name", "type": "string"},
							"caption": {"title": "Link caption", "type": "string"},
							"description": {"title": "Link description", "type": "string"},
							"picture": {"title": "Link thumbnail", "type": "string", "format": "uri"}
						}
					}
				},
				"required": ["message"]
			}
		}
	],
	"definitions": {
		"reference": {
			"title": "User reference",
			"links": [
				{"rel": "full", "href": "/{id}"},
				{"rel": "picture", "href": "/{id}/picture"}
			]
		},
		"education": {"title": "Education"},
		"relationship_status": {
			"title": "Relationship status",
			"type": "string",
			"enum": [
				"Single",
				"In a relationship",
				"Engaged",
				"Married",
				"It's complicated",
				"In an open relationship",
				"Widowed",
				"Separated",
				"Divorced",
				"In a civil union",
				"In a domestic partnership"
			]
		},
		"work": {"title": "Work"}
	},
	"allOf": [{"$ref": "object.json"}]
}
